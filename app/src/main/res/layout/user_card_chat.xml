    android:id="@+id/user_card_chat"
    android:layout_width="80dp"
    android:layout_height="70dp"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp"
    android:background="#EBF5EE">

    <!--    <LinearLayout-->
